<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/fragment_sleep_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="367dp"
            android:layout_height="279dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/sleep_pic" />

        <EditText
            android:id="@+id/fragment_sleep_form_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="01/01/2018"
            android:inputType="date"
            android:textSize="25dp"
            android:textAlignment="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fragment_sleep_form_bed_period_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:inputType="time"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textAlignment="center"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/fragment_sleep_form_bed_period_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="23:59"
                android:inputType="time"
                android:textAlignment="center"
                android:textSize="25dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/fragment_sleep_form_awake_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="9:00"
            android:inputType="time"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/fragment_sleep_save_btn"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SAVE" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>